@using HairSalon.Models;

<h1>HairSalon</h1>
<ul>

@if (Model.Count == 0)
{
  <p>No stylists have been added yet</p>
}
@if(Model.Count != 0)
{
  @foreach (Stylist stylist in Model)
  {
    <li><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></li>

    <button class="btn btn-sm" ><a href='/stylists/@stylist.GetId()/edit'>Edit</a></button>
  }
}

</ul>
<p><a href='/'>Back home</a></p>
<p><a href="/stylists/new">Add a new stylist.</a></p>
<form action="/stylists/delete" method="post">
  <button type="submit" name="button">Delete all stylists</button>
</form>
